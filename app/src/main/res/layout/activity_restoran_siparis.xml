<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/turuncu"
    tools:context=".Activity.RestoranSiparis">


    <TextView
        android:id="@+id/siparislerText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="Siparişler"
        android:textSize="26sp" />

    <ListView
        android:id="@+id/siparisListesi"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/siparislerText"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/siparisGonderBtn"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_below="@+id/siparisListesi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="@drawable/button_selector"
        android:text="Sipariş gönder"
        android:textSize="17dp" />
</RelativeLayout>