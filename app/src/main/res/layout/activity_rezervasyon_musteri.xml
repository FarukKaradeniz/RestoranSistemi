<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/turuncu"
    tools:context=".Activity.RezervasyonMusteriActivity">

    <TextView
        android:id="@+id/rezListTxt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Rezervasyonlarınız"
        android:textColor="@color/colorTexts"
        android:textSize="22sp" />

    <ListView
        android:id="@+id/rezervasyonList"
        style="@style/Widget.AppCompat.ListView.DropDown"
        android:layout_width="match_parent"
        android:layout_height="387dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rezListTxt" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rezervasyonList"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/rezSil"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@drawable/button_selector"
            android:text="Rezervasyon İptal"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp" />

        <Button
            android:id="@+id/yeniRezYap"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@drawable/button_selector"
            android:text="Yeni Rezervasyon"
            android:textSize="18sp"
            android:layout_marginEnd="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>